 import java.util.*;

class A {
    public void sumofnumber()
{
    
      Scanner sc=new Scanner(System.in);
       System.out.println("Enter the number:");
       int num=sc.nextInt();
       int r,sum=0;
       
      while(num>0)
      {
          
          r=num%10;
          sum=sum+r;
          num=num/10;
          
      }
       System.out.println("Sum of digit= "+sum); 
    
    
    
}
 
    public static void main(String[] args) {
        A obj=new A();
        obj.sumofnumber();
        
        
       
    }
}
